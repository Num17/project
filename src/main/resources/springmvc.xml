	<!-- <mvc:mapping path="/*" /> -->
	<!-- <mvc:exclude-mapping path="/user-*" /> -->
	<!-- <mvc:exclude-mapping path="/user_updateheadimage" /> -->
	<!-- <bean class="com.xiangyue.interceptor.LoginInterceptor" /> -->
	<!-- </mvc:interceptor> -->
	<!-- </mvc:interceptors> -->
</beans>
